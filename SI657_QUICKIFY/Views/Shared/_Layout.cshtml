
@using SI657_QUICKIFY.Controllers;


<!DOCTYPE html>
<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SI657 - QUICKIFY</title>
        <link href="/Resources/vendor/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <link href="/Resources/css/sb-admin-2.min.css" rel="stylesheet">
        <link href="/Resources/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
        <link href="/Resources/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body id="wrapper">

        <ul class="navbar-nav bg-primary sidebar sidebar-dark accordion toggled" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Kanban","Board")">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-share-alt"></i>
                </div>
                <div class="sidebar-brand-text mx-3">QUICKIFY</div>
            </a>

            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Backlog")">
                    <i class="fas fa-fw fa-list-alt"></i>
                    <span>Backlog</span>
                </a>
            </li>

            <br>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Kanban","Board")">
                    <i class="fas fa-fw fa-columns"></i>
                    <span>Board</span>
                </a>
            </li>

            <br />
            <br />

        </ul>


        <div id="content-wrapper" class="d-flex flex-column">

            <div style="background-color:white;" id="content">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-5 static-top">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <h4 style="color: black;">&nbsp;<strong>@ProyectController.Static_Name</strong></h4>

                    <ul class="navbar-nav ml-auto">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="topbar-divider d-none d-sm-block"></div>

                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-900 medium">@User.Identity.Name &nbsp;&nbsp;</span>
                                    <img class="img-profile rounded-circle" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQ95GrFuesVVuyyfXOSimzstFtyiQ594yP-DNe0UfbUs_kyqqrM&usqp=CAU">
                                </a>

                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">


                                    <a id="btn_Proyect"  class="dropdown-item" href='@Url.Action("Index", "Proyect")'>
                                        <i class="fas fa-folder-open fa-sm fa-fw mr-2 text-gray-500"></i>
                                        Proyectos
                                    </a>
                                    @*<div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href='@Url.Action("ProfileUser", "Auth")'>
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-500"></i>
                                        Perfil
                                    </a>*@

                                    <div class="dropdown-divider"></div>

                                    <a  id="btn_Logout"  class="dropdown-item" href='@Url.Action("Logout", "Auth")'>
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-500"></i>
                                        Cerrar Sesión
                                    </a>
                                </div>

                            </li>
                        }
                    </ul>

                </nav>

                <div style="background-color:white;" class="container-fluid">
                    @RenderBody()
                </div>

            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)

            <script src="/Resources/vendor/jquery/jquery.min.js"></script>
            <script src="/Resources/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="/Resources/vendor/jquery-easing/jquery.easing.min.js"></script>
            <script src="/Resources/js/sb-admin-2.min.js"></script>
            <script src="/Resources/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="/Resources/js/demo/datatables-demo.js"></script>
    </body>

</html>