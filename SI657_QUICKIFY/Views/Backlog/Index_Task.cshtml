@model IEnumerable<QUICKIFYRepository.Tarea>

@using SI657_QUICKIFY.Controllers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h5>Historia de Usuario</h5>
<h4><strong>@ViewBag.NameHU</strong></h4>
<br />
<p>
    @Html.ActionLink("Agregar Tarea", "Create_Task", null, new { @id = "Alquiler_btn_Cancelar", @class = "btn btn-primary" })
</p>
<br />
<table style="color: black;" class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                <a href="@Url.Action("Edit_Task","Backlog",new { id = item.Id })" title="Editar Tarea" class="btn btn-circle btn-sm btn-primary"><i class="fas fa-pen"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>

            <td>@Html.ActionLink("Eliminar", "Delete_Task", new { id = item.Id }, new { @id = "Alquiler_btn_Cancelar", @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

