@model IEnumerable<QUICKIFYRepository.HistoriaUsuario>

@using SI657_QUICKIFY.Controllers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<h4><strong>Historia de Usuario</strong></h4>
<br />
<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @id = "btn_HU_Crear", @class = "btn btn-primary" })
</p>
<br />
<table style="color: black;" class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Sprint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>

        <th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        <a href="@Url.Action("Edit","Backlog",new { id = item.Id })" title="Editar Historia de Usuario" class="btn btn-circle btn-sm btn-primary"><i class="fas fa-pen"></i></a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sprint)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Titulo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>

    <td>
        @Html.ActionLink("Tareas", "Index_Task", new { id = item.Id }, new {  @class = "btn btn-primary" }) &nbsp;&nbsp;&nbsp;
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new {  @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>
