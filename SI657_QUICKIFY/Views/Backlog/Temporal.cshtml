@model QUICKIFYRepository.HistoriaUsuario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div>
        <div>

            <form id="NewOrderForm">
                <div>
                    @*Customer Details*@
                    <h3><strong>Historia de Usuario</strong></h3>
                    <hr />
                    <div class="form-horizontal">

                        <div class="form-group row">
                            <div class="col-sm-5 mb-3 mb-sm-0">
                                @*@Html.EditorFor(model => model.Cargo_Id, new { htmlAttributes = new { @class = "form-control form-control-user" } })*@
                                <h6><strong>Titulo</strong></h6>
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @Id = "Backlog_txt_Titulo_HU", @class = "form-control", @placeholder = "Ingresar Titulo" } })
                            </div>
                            <div class="col-sm-3">
                                <h6><strong>Prioridad</strong></h6>
                                @Html.EditorFor(model => model.Prioridad, new { htmlAttributes = new { @Id = "Backlog_int_Prioridad", @class = "form-control form-control-user" } })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-8 mb-3 mb-sm-0">
                                <h6><strong>Descripcion</strong></h6>
                                <textarea Id = "Backlog_txt_Descripcion_HU" class="form-control form-control-user" placeholder="Escribe aquí ..."></textarea>
                            </div>
                        </div>


        <div class="form-group row">
            <div class="col-sm-5 mb-3 mb-sm-0">
                @*@Html.EditorFor(model => model.Cargo_Id, new { htmlAttributes = new { @class = "form-control form-control-user" } })*@
                            <h6><strong>Fecha Estimada</strong></h6>
                            @Html.EditorFor(model => model.FechaEstimada, new { htmlAttributes = new { @Id = "Backlog_txt_Titulo", @class = "form-control", @type = "date" } })
                            </div>
                            <div class="col-sm-3">
                                <h6><strong>Sprint</strong></h6>
                                @Html.EditorFor(model => model.Sprint, new { htmlAttributes = new { @Id = "Backlog_int_Sprint", @class = "form-control form-control-user" } })
                            </div>
                        </div>

                    </div>

                    <br />

                    @*Order Details*@
                    <h4><strong>Tareas</strong></h4>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="OrderId" />

                        <div class="form-group row">
                            <div class="col-sm-5 mb-3 mb-sm-0">
                                <h6><strong>Titulo</strong></h6>
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @Id = "Backlog_txt_Titulo_TA", @class = "form-control", @placeholder = "Ingresar Titulo" } })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-8 mb-3 mb-sm-0">
                                <h6><strong>Descripcion</strong></h6>
                                <textarea Id="Backlog_txt_Descripcion_TA" class="form-control form-control-user" placeholder="Escribe aquí ..."></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <button id="addToList" class="btn btn-primary">Agregar a la Lista</button>
                        </div>

                        <table id="Alquiler_tabl_Deatalles" class="table">
                            <thead>
                                <tr>
                                    <th style="width:30%">Tarea</th>
                                    <th style="width:20%"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <br />
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Cancelar", "Index", null, new { @id = "Alquiler_btn_Cancelar", @class = "btn btn-danger" })
                    <button id="Alquiler_btn_Guardar" type="submit" class="btn btn-primary">Guardar Datos</button>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
