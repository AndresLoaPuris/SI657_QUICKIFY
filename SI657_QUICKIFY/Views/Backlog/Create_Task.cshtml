@model QUICKIFYRepository.Tarea

@{
    ViewBag.Title = "Create_Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SI657_QUICKIFY.Controllers;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><strong>Tarea</strong></h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">


        <div class="form-group row">
            <div class="col-sm-8 mb-3 mb-sm-3">
                <h6 style="color: black;">Titulo</h6>
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @id = "txt_Task_Titulo", @class = "form-control form-control-user", @style = "color: black;" } })
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-8 mb-3 mb-sm-3">
                <h6 style="color: black;">Descripcion</h6>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @id = "txt_Task_Descripcion", @class = "form-control form-control-user", @style = "color: black;" } })
            </div>
        </div>


    </div>

        <div class="form-group row">


            <div class="col-md-offset-2 col-md-10">

                @Html.ActionLink("Cancelar", "Index_Task", new { id = BacklogController.Static_HU }, new { @id = "btn_Task_Cancelar" , @class = "btn btn-danger" })
                &nbsp; &nbsp;&nbsp;
                <input id = "btn_Task_Guardar" type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

