@model IEnumerable<QUICKIFYRepository.Equipo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Welcome.cshtml";
    var lastProyect = "";
}

@using QUICKIFYRepository;



<h3><strong>Proyectos</strong></h3>
<hr />
<p>
    @Html.ActionLink("Crear Proyecto", "Create", null, new { @class = "btn btn-primary" })
</p>



@foreach (var item in Model)
{

    <table class="table">

        @if (SI657_Entities.getInstance().Proyecto.Find(item.Proyecto_Id).Nombre != lastProyect)
        {
            <br />
            <tr>
                <th style="background-color: #3b375b; font-size: 18px; border-radius: 12px; color:white;">
                    &nbsp;&nbsp;
                    @Html.DisplayFor(modelItem => SI657_Entities.getInstance().Proyecto.Find(item.Proyecto_Id).Nombre)
                    @Html.ActionLink("Abrir Proyecto", "PassKanban", new { name = SI657_Entities.getInstance().Proyecto.Find(item.Proyecto_Id).Nombre }, new { @class = "btn btn-primary", @style = "float: right;" })
                </th>
            </tr>


    }
        <tr>
            <td style="color:black;">
                &nbsp;&nbsp;
                <strong>@Html.DisplayFor(modelItem => SI657_Entities.getInstance().Usuario.Find(item.Usuario_Id).Cargo.Nombre)</strong>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.DisplayFor(modelItem => SI657_Entities.getInstance().Usuario.Find(item.Usuario_Id).Nombre)
            </td>

        </tr>

    </table>


    lastProyect = SI657_Entities.getInstance().Proyecto.Find(item.Proyecto_Id).Nombre;
}

<br />
<br />


