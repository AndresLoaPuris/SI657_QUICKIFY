@section scripts{

    <script>

        //Add Multiple Order.
        $("#addToList").click(function (e) {

            e.preventDefault();

            if ($.trim($("#Proyecto_ddl_Desarrollador").val()) == "") return;

            var productName = $("#Proyecto_ddl_Desarrollador").val(),
                detailsTableBody = $("#Alquiler_tabl_Deatalles tbody");
            var productItem = '<tr><td>' + productName + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(productItem);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#Proyecto_ddl_Desarrollador").val();
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Proyect/SaveEquipo",
                data: data,
                success: function (result) {

                    location.href = "/Proyect/Index";
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#Alquiler_btn_Guardar").click(function (e) {
            e.preventDefault();

            var orderArr = [];
            orderArr.length = 0;

            $.each($("#Alquiler_tabl_Deatalles tbody tr"), function () {
                orderArr.push({
                    Nombre: $(this).find('td:eq(0)').html()
                });
            });


            var data = JSON.stringify({
                nombre: $("#Proyecto_txt_Nombre").val(),
                lider: $("#Proyecto_ddl_Lider").val(),
                usuarios: orderArr
            });
            saveOrder(data)
        });
    </script>
